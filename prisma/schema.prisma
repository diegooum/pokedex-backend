// Configuración estándar
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USUARIOS (Consolidado)
// Tiene UUID (seguridad), Auth y Relaciones
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String   // Hash de seguridad
  isActive  Boolean  @default(true)
  roles     String[] @default(["user"])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  favorites Pokemon[] // Tus favoritos (Many-to-Many)
  teams     Team[]    // Tus equipos guardados (One-to-Many)
}

// 2. POKÉMON (Caché Local + Datos para IA)
// Guardamos stats aquí para que el algoritmo de equipos sea RÁPIDO
model Pokemon {
  id        Int      @id // ID original (ej: 25 Pikachu)
  name      String
  image     String?
  types     String[] // Array de strings: ["fire", "flying"]
  
  // Stats Base (Vitales para tu KNN y el Team Builder)
  hp        Int      @default(0)
  attack    Int      @default(0)
  defense   Int      @default(0)
  spAttack  Int      @default(0)
  spDefense Int      @default(0)
  speed     Int      @default(0)

  // Relaciones inversas
  likedBy   User[]   // Usuarios que lo tienen en favoritos
  teams     Team[]   // Equipos donde aparece este Pokémon
}

// 3. EQUIPOS (La nueva Feature)
model Team {
  id        String   @id @default(uuid())
  name      String   // Ej: "Equipo Anti-Fuego"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación: Un equipo pertenece a UN usuario
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  // Relación: Un equipo tiene MUCHOS Pokémon (validaremos que sean máx 6 en código)
  pokemons  Pokemon[]
}